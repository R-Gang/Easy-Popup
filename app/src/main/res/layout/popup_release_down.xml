<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rlPopupBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/vArrow"
            android:layout_width="10dp"
            android:layout_height="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="30dp" />

        <RelativeLayout
            android:layout_width="175dp"
            android:layout_height="120dp"
            android:layout_below="@id/vArrow"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shape_white_6_corner">

            <RelativeLayout
                android:id="@+id/rlArticle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivArticle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_article" />

                <TextView
                    android:id="@+id/tvArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_toEndOf="@id/ivArticle"
                    android:gravity="center"
                    android:text="@string/mine_content_tab_articles"
                    android:textColor="@color/color_303a47"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvArticleDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvArticle"
                    android:layout_alignStart="@id/tvArticle"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/mine_share_articles"
                    android:textColor="@color/color_8798af"
                    android:textSize="11sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlArticle">

                <ImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/ic_video" />

                <TextView
                    android:id="@+id/tvVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="11dp"
                    android:layout_toEndOf="@id/ivVideo"
                    android:gravity="center"
                    android:text="@string/mine_content_tab_video"
                    android:textColor="@color/color_303a47"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvVideoDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvVideo"
                    android:layout_alignStart="@id/tvVideo"
                    android:layout_marginTop="2dp"
                    android:gravity="center"
                    android:text="@string/mine_share_vidoes"
                    android:textColor="@color/color_8798af"
                    android:textSize="11sp" />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</layout>